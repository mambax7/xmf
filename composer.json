{
    "name": "xoops/xmf",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "description": "XMF - XOOPS Module Framework",
    "autoload": {
      "psr-4": {
        "Xmf\\": "src"
      }
    },
    "require": {
      "php": ">=7.4.0",
      "kint-php/kint": "^6.0",
      "symfony/yaml": "^5.4.45",
      "paragonie/random_compat": "^9.99.100",
      "firebase/php-jwt": "^6.10.0|^6.11.0",
      "webmozart/assert": "^1.11.0"
    },
    "require-dev": {
      "phpunit/phpunit": "^9.6",
      "roave/security-advisories": "dev-latest",
      "phpstan/phpstan": "^1.10",
      "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload-dev": {
      "psr-4": {
        "Xmf\\Test\\": "tests/unit/"
      }
    },
    "scripts": {
      "test": "phpunit",
      "check-style": "phpcs --standard=phpcs.xml.dist src tests",
      "fix-style": "phpcbf --standard=phpcs.xml.dist src tests",
      "analyze": "phpstan analyze src --level=5"
    }
  }
}
